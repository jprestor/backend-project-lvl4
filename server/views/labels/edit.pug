extends ../layouts/application.pug

block header
  = t('views.labels.edit.title')

block content
  .p-5.mb-4.bg-light.rounded-3
    +formFor()(action=route('editLabelEndpoint', { id: label.id }) method='post')
      input(name='_method' type='hidden' value='patch')
      +input(label, 'name', errors, t('views.labels.name'))(type="text") 
      +submit(label)(value=t('views.labels.edit.submit'))
