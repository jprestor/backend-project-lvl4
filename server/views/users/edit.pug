extends ../layouts/application.pug

block header
  = t('views.users.edit.title')

block content
  .p-5.mb-4.bg-light.rounded-3
    +formFor()(action=route('editUserEndpoint', { id: user.id }) method='post')
      input(name='_method' type='hidden' value='patch')
      +input(user, 'firstName', errors, t('views.users.firstName'))(type="text") 
      +input(user, 'lastName', errors, t('views.users.lastName'))(type="text")
      +input(user, 'email', errors, t('views.users.email'))(type="text")
      +input(user, 'password', errors, t('views.users.password'))(type="password")
      +submit(user)(value=t('views.users.edit.submit'))
